{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "chosenDates": {
      "type": "object",
      "properties": {
        "from": {
          "type": "string",
          "$comment": "YYYYMMDD format"
        },
        "to": {
          "type": "string",
          "$comment": "YYYYMMDD format"
        }
      }
    },
    "generalAvailConfirmed": {
      "type": "object",
      "$comment": "keys are user names",
      "patternProperties": {
        "^\\w+$": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "timeRanges": {
      "type": "object",
      "patternProperties": {
        "^\\w+$": {
          "type": "object",
          "patternProperties": {
            "^GENERAL$|^\\d{8}$": {
              "type": "array",
              "minItems": 7,
              "maxItems": 7,
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "from": {
                      "type": "string",
                      "$comment": "HHmm format"
                    },
                    "to": {
                      "type": "string",
                      "$comment": "HHmm format"
                    }
                  },
                  "required": [
                    "from",
                    "to"
                  ]
                }
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}