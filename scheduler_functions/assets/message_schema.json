{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "message_schema.json",
  "definitions": {
    "week": {
      "anyOf": [
        {
          "type": "string",
          "$comment": "Must be a Monday (not validated). YYYYMMDDHHmm format."
        },
        {
          "const": "GENERAL"
        }
      ]
    },
    "sharedProperties": {
      "$comment": "Shared properties across all messages",
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "author": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "author"
      ],
      "additionalProperties": true
    },
    "datesMessage": {
      "type": "object",
      "properties": {
        "type": {
          "const": "DATES"
        },
        "prompt": {
          "type": "string"
        },
        "author": {
          "const": "USER"
        }
      },
      "required": [
        "type",
        "prompt"
      ]
    },
    "rangeMessage": {
      "type": "object",
      "properties": {
        "type": {
          "const": "RANGE"
        },
        "fromDate": {
          "type": "string",
          "$comment": "YYYYMMDD format"
        },
        "toDate": {
          "type": "string",
          "$comment": "YYYYMMDD format"
        },
        "eventId": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "fromDate",
        "toDate"
      ]
    },
    "meetingTitleMessage": {
      "type": "object",
      "properties": {
        "type": {
          "const": "MEETING_TITLE"
        },
        "title": {
          "type": "string"
        },
        "eventId": {
          "type": "string"
        },
        "author": {
          "const": "USER"
        }
      },
      "required": [
        "title",
        "eventId"
      ]
    },
    "nameMessage": {
      "type": "object",
      "properties": {
        "type": {
          "const": "NAME"
        },
        "name": {
          "type": "string"
        },
        "eventId": {
          "type": "string"
        },
        "author": {
          "const": "USER"
        }
      },
      "required": [
        "name",
        "eventId"
      ]
    },
    "timesMessage": {
      "type": "object",
      "properties": {
        "type": {
          "const": "TIMES"
        },
        "name": {
          "type": "string"
        },
        "week": { "$ref": "#/definitions/week" },
        "prompt": {
          "type": "string"
        },
        "eventId": {
          "type": "string"
        },
        "author": {
          "const": "USER"
        }
      },
      "required": [
        "type",
        "name",
        "week",
        "prompt",
        "eventId"
      ]
    },
    "timeGridMessage": {
      "type": "object",
      "properties": {
        "type": {
          "const": "TIME_GRID"
        },
        "author": {
          "const": "SCHEDULER"
        },
        "timeGrid": { "$ref": "common_schema.json#/definitions/timeGrid" }
      },
      "required": [
        "type",
        "timeGrid"
      ]
    },
    "confirmMessage": {
      "type": "object",
      "properties": {
        "type": {
          "const": "CONFIRM"
        },
        "eventId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "author": {
          "const": "USER"
        }
      },
      "required": [
        "type",
        "eventId",
        "name"
      ]
    },
    "toggleSlotsMessage": {
      "type": "object",
      "properties": {
        "type": {
          "const": "TOGGLE_SLOTS"
        },
        "from": {
          "type": "string",
          "$comment": "YYYYMMDDHHmm format"
        },
        "to": {
          "type": "string",
          "$comment": "YYYYMMDDHHmm format"
        },
        "eventId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "author": {
          "const": "USER"
        }
      },
      "required": [
        "type",
        "from",
        "to",
        "eventId",
        "name"
      ]
    },
    "toggleGeneralSlotsMessage": {
      "type": "object",
      "properties": {
        "type": {
          "const": "TOGGLE_GENERAL_SLOTS"
        },
        "day": {
          "type": "integer"
        },
        "from": {
          "type": "string",
          "$comment": "HHmm format"
        },
        "to": {
          "type": "string",
          "$comment": "HHmm format"
        },
        "eventId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "author": {
          "const": "USER"
        }
      },
      "required": [
        "type",
        "day",
        "from",
        "to",
        "eventId",
        "name"
      ]
    },
    "errorMessage": {
      "type": "object",
      "properties": {
        "type": {
          "const": "ERROR"
        },
        "errorMessage": {
          "type": "string"
        },
        "errorType": {
          "type": "string"
        },
        "author": {
          "const": "SCHEDULER"
        }
      },
      "required": [
        "type",
        "errorMessage"
      ]
    }
  },
  "type": "object",
  "allOf": [
    { "$ref": "#/definitions/sharedProperties" },
    {
      "oneOf": [
        { "$ref": "#/definitions/datesMessage" },
        { "$ref": "#/definitions/rangeMessage" },
        { "$ref": "#/definitions/meetingTitleMessage" },
        { "$ref": "#/definitions/nameMessage" },
        { "$ref": "#/definitions/timesMessage" },
        { "$ref": "#/definitions/timeGridMessage" },
        { "$ref": "#/definitions/confirmMessage" },
        { "$ref": "#/definitions/toggleSlotsMessage" },
        { "$ref": "#/definitions/toggleGeneralSlotsMessage" },
        { "$ref": "#/definitions/errorMessage" }
      ]
    }
  ]
}